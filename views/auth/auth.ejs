<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - SMEN International</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #dc143c;
            --primary-dark: #b8112f;
            --gold: #ffd700;
            --orange: #ff8c00;
            --dark: #1a1a1a;
            --gray: #666;
            --light-gray: #f5f5f5;
        }

        body {
            font-family: 'Work Sans', sans-serif;
            overflow-x: hidden;
            background: var(--dark);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* Animated Background */
        .bg-pattern {
            position: fixed;
            inset: 0;
            z-index: 0;
            overflow: hidden;
        }

        .bg-pattern::before {
            content: '';
            position: absolute;
            inset: -50%;
            background: 
                radial-gradient(circle at 20% 50%, rgba(220, 20, 60, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 140, 0, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 90%, rgba(255, 215, 0, 0.08) 0%, transparent 50%);
            animation: bgShift 20s ease-in-out infinite;
        }

        .grid-overlay {
            position: absolute;
            inset: 0;
            background-image: 
                linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: gridMove 30s linear infinite;
        }

        @keyframes bgShift {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(10%, -10%) scale(1.1); }
            66% { transform: translate(-10%, 10%) scale(0.9); }
        }

        @keyframes gridMove {
            0% { background-position: 0 0; }
            100% { background-position: 50px 50px; }
        }

        /* Main Container */
        .auth-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 1200px;
            margin: 2rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            background: rgba(255, 255, 255, 0.98);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(20px);
        }

        /* Left Side - Branding with Background Image */
        .auth-brand {
            background-image: 
                linear-gradient(135deg, rgba(220, 20, 60, 0.92) 0%, rgba(255, 140, 0, 0.92) 100%),
                url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=800&q=80');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            padding: 4rem 3rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: relative;
            overflow: hidden;
        }

        .auth-brand::before {
            content: '';
            position: absolute;
            inset: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
            animation: patternSlide 20s linear infinite;
        }

        @keyframes patternSlide {
            0% { transform: translate(0, 0); }
            100% { transform: translate(100px, 100px); }
        }

        .brand-content {
            position: relative;
            z-index: 1;
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 1.5rem;
            letter-spacing: 2px;
            text-shadow: 2px 2px 20px rgba(0, 0, 0, 0.3);
        }

        .brand-tagline {
            font-size: 1.3rem;
            color: rgba(255, 255, 255, 0.95);
            font-weight: 300;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .brand-features {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            margin-top: 3rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: #fff;
            font-size: 0.95rem;
            opacity: 0;
            animation: slideInLeft 0.6s ease forwards;
        }

        .feature-item:nth-child(1) { animation-delay: 0.2s; }
        .feature-item:nth-child(2) { animation-delay: 0.4s; }
        .feature-item:nth-child(3) { animation-delay: 0.6s; }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .feature-icon {
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            backdrop-filter: blur(10px);
            flex-shrink: 0;
        }

        .brand-footer {
            position: relative;
            z-index: 1;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.85rem;
            margin-top: 3rem;
        }

        /* Right Side - Form */
        .auth-form-section {
            padding: 4rem 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-header {
            margin-bottom: 2.5rem;
        }

        .form-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            color: var(--gray);
            font-size: 0.95rem;
        }

        .form-tabs {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            border-bottom: 2px solid #eee;
        }

        .form-tab {
            padding: 1rem 2rem;
            background: none;
            border: none;
            font-size: 1rem;
            font-weight: 500;
            color: var(--gray);
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            font-family: 'Work Sans', sans-serif;
        }

        .form-tab.active {
            color: var(--primary);
        }

        .form-tab.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(135deg, var(--primary), var(--orange));
        }

        .form-tab:hover {
            color: var(--primary);
        }

        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .form-label {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--dark);
        }

        .form-input {
            padding: 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            font-family: 'Work Sans', sans-serif;
            transition: all 0.3s ease;
            background: #fff;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(220, 20, 60, 0.1);
        }

        .password-input-wrapper {
            position: relative;
        }

        /* Enhanced Password Toggle Button */
        .toggle-password {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            padding: 0.5rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 8px;
        }

        .toggle-password:hover {
            background: rgba(220, 20, 60, 0.1);
        }

        .toggle-password:active {
            transform: translateY(-50%) scale(0.95);
        }

        /* Eye Icon SVG Styles */
        .eye-icon {
            width: 22px;
            height: 22px;
            stroke: var(--gray);
            fill: none;
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
            transition: stroke 0.3s ease;
        }

        .toggle-password:hover .eye-icon {
            stroke: var(--primary);
        }

        .eye-icon.eye-off .slash {
            opacity: 1;
        }

        .eye-icon.eye-on .slash {
            opacity: 0;
        }

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.9rem;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .checkbox-wrapper input {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: var(--primary);
        }

        .checkbox-wrapper label {
            color: var(--gray);
            cursor: pointer;
        }

        .forgot-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            transition: opacity 0.3s ease;
        }

        .forgot-link:hover {
            opacity: 0.8;
        }

        .submit-btn {
            padding: 1rem 2rem;
            background: linear-gradient(135deg, var(--primary), var(--orange));
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(220, 20, 60, 0.3);
            margin-top: 1rem;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(220, 20, 60, 0.4);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        .divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1.5rem 0;
            color: var(--gray);
            font-size: 0.9rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e0e0e0;
        }

        .social-login {
            display: flex;
            gap: 1rem;
        }

        .social-btn {
            flex: 1;
            padding: 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            background: #fff;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--dark);
            transition: all 0.3s ease;
            font-family: 'Work Sans', sans-serif;
        }

        .social-btn:hover {
            border-color: var(--primary);
            background: rgba(220, 20, 60, 0.05);
        }

        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            color: var(--gray);
            font-size: 0.9rem;
        }

        .form-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

        .form-footer a:hover {
            text-decoration: underline;
        }

        /* Hidden Forms */
        .auth-form.hidden {
            display: none;
        }

        /* Signup specific fields */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        /* Success Message */
        .success-message {
            display: none;
            padding: 1rem;
            background: rgba(34, 197, 94, 0.1);
            border: 2px solid rgba(34, 197, 94, 0.3);
            border-radius: 10px;
            color: #059669;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .success-message.show {
            display: block;
            animation: slideInDown 0.5s ease;
        }

        @keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Error Message */
        .error-message {
            display: none;
            padding: 1rem;
            background: rgba(239, 68, 68, 0.1);
            border: 2px solid rgba(239, 68, 68, 0.3);
            border-radius: 10px;
            color: #dc2626;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .error-message.show {
            display: block;
            animation: slideInDown 0.5s ease;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .auth-container {
                grid-template-columns: 1fr;
                max-width: 600px;
            }

            .auth-brand {
                padding: 3rem 2rem;
            }

            .brand-features {
                flex-direction: row;
                flex-wrap: wrap;
            }

            .feature-item {
                flex: 1;
                min-width: 200px;
            }
        }

        @media (max-width: 768px) {
            .auth-container {
                margin: 1rem;
                border-radius: 15px;
            }

            .auth-brand {
                padding: 2rem 1.5rem;
            }

            .logo {
                font-size: 2.5rem;
            }

            .brand-tagline {
                font-size: 1.1rem;
            }

            .brand-features {
                margin-top: 2rem;
            }

            .auth-form-section {
                padding: 2.5rem 1.5rem;
            }

            .form-title {
                font-size: 2rem;
            }

            .form-tabs {
                gap: 0.5rem;
            }

            .form-tab {
                padding: 0.8rem 1.5rem;
                font-size: 0.95rem;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .social-login {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .auth-brand {
                padding: 1.5rem 1rem;
            }

            .logo {
                font-size: 2rem;
            }

            .brand-tagline {
                font-size: 1rem;
            }

            .feature-item {
                font-size: 0.85rem;
            }

            .feature-icon {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }

            .auth-form-section {
                padding: 2rem 1rem;
            }

            .form-title {
                font-size: 1.8rem;
            }

            .form-tab {
                padding: 0.7rem 1rem;
                font-size: 0.9rem;
            }

            .form-input,
            .submit-btn {
                padding: 0.9rem;
            }

            .form-options {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-pattern">
        <div class="grid-overlay"></div>
    </div>

    <!-- Main Container -->
    <div class="auth-container">
        <!-- Left Side - Branding with Background Image -->
        <div class="auth-brand">
            <div class="brand-content">
                <div class="logo">SMEN</div>
                <div class="brand-tagline">The Largest Business Expert</div>
                
                <div class="brand-features">
                    <div class="feature-item">
                        <div class="feature-icon">üåç</div>
                        <div>
                            <strong>Global Presence</strong><br>
                            Operations across Nigeria and Ghana
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">üèÜ</div>
                        <div>
                            <strong>Industry Leader</strong><br>
                            Excellence in multiple sectors
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">ü§ù</div>
                        <div>
                            <strong>Trusted Partner</strong><br>
                            Delivering quality since 2021
                        </div>
                    </div>
                </div>
            </div>

            <div class="brand-footer">
                <p>&copy; 2026 SMEN International Company Limited</p>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="auth-form-section">
            <div class="form-header">
                <h1 class="form-title">Welcome</h1>
                <p class="form-subtitle">Sign in to access your account or create a new one</p>
            </div>

            <!-- Tab Navigation -->
            <div class="form-tabs">
                <button class="form-tab active" onclick="switchTab('signin')">Sign In</button>
                <button class="form-tab" onclick="switchTab('signup')">Sign Up</button>
            </div>

            <!-- Success Message -->
            <div class="success-message" id="successMessage">
                ‚úì Account created successfully! Please sign in.
            </div>

            <!-- Error Message -->
            <div class="error-message" id="errorMessage">
                Invalid credentials. Please try again.
            </div>

            <!-- Sign In Form -->
            <form class="auth-form" id="signinForm" onsubmit="handleSignIn(event)">
                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input 
                        type="email" 
                        class="form-input" 
                        placeholder="you@example.com"
                        required
                    >
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <div class="password-input-wrapper">
                        <input 
                            type="password" 
                            class="form-input" 
                            id="signinPassword"
                            placeholder="Enter your password"
                            required
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('signinPassword', this)">
                            <svg class="eye-icon eye-off" viewBox="0 0 24 24">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                                <line class="slash" x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="form-options">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="remember">
                        <label for="remember">Remember me</label>
                    </div>
                    <a href="#" class="forgot-link">Forgot password?</a>
                </div>

                <button type="submit" class="submit-btn">Sign In</button>
            </form>

            <!-- Sign Up Form -->
            <form class="auth-form hidden" id="signupForm" onsubmit="handleSignUp(event)">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        <input 
                            type="text" 
                            class="form-input" 
                            placeholder="John"
                            required
                        >
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Name</label>
                        <input 
                            type="text" 
                            class="form-input" 
                            placeholder="Doe"
                            required
                        >
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input 
                        type="email" 
                        class="form-input" 
                        placeholder="you@example.com"
                        required
                    >
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <div class="password-input-wrapper">
                        <input 
                            type="password" 
                            class="form-input" 
                            id="signupPassword"
                            placeholder="Create a strong password"
                            minlength="8"
                            required
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('signupPassword', this)">
                            <svg class="eye-icon eye-off" viewBox="0 0 24 24">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                                <line class="slash" x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        </button>
                    </div>
                    <small style="color: var(--gray); font-size: 0.85rem; margin-top: 0.3rem;">
                        Must be at least 8 characters
                    </small>
                </div>

                <div class="form-group">
                    <label class="form-label">Confirm Password</label>
                    <div class="password-input-wrapper">
                        <input 
                            type="password" 
                            class="form-input" 
                            id="confirmPassword"
                            placeholder="Confirm your password"
                            minlength="8"
                            required
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword', this)">
                            <svg class="eye-icon eye-off" viewBox="0 0 24 24">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                                <line class="slash" x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="checkbox-wrapper">
                    <input type="checkbox" id="terms" required>
                    <label for="terms">I agree to the <a href="#" style="color: var(--primary);">Terms & Conditions</a></label>
                </div>

                <button type="submit" class="submit-btn">Create Account</button>
            </form>

            <div class="form-footer">
                <p id="footerText">
                    Don't have an account? <a href="#" onclick="switchTab('signup'); return false;">Sign up</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Tab Switching
        function switchTab(tab) {
            const tabs = document.querySelectorAll('.form-tab');
            const signinForm = document.getElementById('signinForm');
            const signupForm = document.getElementById('signupForm');
            const footerText = document.getElementById('footerText');
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            
            // Hide messages
            successMessage.classList.remove('show');
            errorMessage.classList.remove('show');
            
            // Update tabs
            tabs.forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            if (tab === 'signin') {
                signinForm.classList.remove('hidden');
                signupForm.classList.add('hidden');
                footerText.innerHTML = 'Don\'t have an account? <a href="#" onclick="switchTab(\'signup\'); return false;">Sign up</a>';
            } else {
                signinForm.classList.add('hidden');
                signupForm.classList.remove('hidden');
                footerText.innerHTML = 'Already have an account? <a href="#" onclick="switchTab(\'signin\'); return false;">Sign in</a>';
            }
        }

        // Toggle Password Visibility with Icon Animation
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('.eye-icon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('eye-off');
                icon.classList.add('eye-on');
            } else {
                input.type = 'password';
                icon.classList.remove('eye-on');
                icon.classList.add('eye-off');
            }
        }

        // Handle Sign In
        function handleSignIn(event) {
            event.preventDefault();
            const errorMessage = document.getElementById('errorMessage');
            
            // Simulate authentication
            // In production, this would make an API call
            const email = event.target.querySelector('input[type="email"]').value;
            const password = event.target.querySelector('input[type="password"]').value;
            
            // Demo: Accept any email/password
            if (email && password) {
                // Store session (demo)
                localStorage.setItem('user', JSON.stringify({ email, loggedIn: true }));
                
                // Redirect to dashboard
                window.location.href = 'dashboard-responsive.html';
            } else {
                errorMessage.classList.add('show');
                setTimeout(() => {
                    errorMessage.classList.remove('show');
                }, 3000);
            }
        }

        // Handle Sign Up
        function handleSignUp(event) {
            event.preventDefault();
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            
            const password = document.getElementById('signupPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                errorMessage.textContent = 'Passwords do not match!';
                errorMessage.classList.add('show');
                setTimeout(() => {
                    errorMessage.classList.remove('show');
                }, 3000);
                return;
            }
            
            // Simulate account creation
            // In production, this would make an API call
            successMessage.classList.add('show');
            
            // Auto switch to sign in after 2 seconds
            setTimeout(() => {
                switchTab('signin');
                // Pre-fill email
                const email = event.target.querySelector('input[type="email"]').value;
                document.querySelector('#signinForm input[type="email"]').value = email;
            }, 2000);
        }

        // Check if user is already logged in
        window.addEventListener('DOMContentLoaded', () => {
            const user = localStorage.getItem('user');
            if (user) {
                const userData = JSON.parse(user);
                if (userData.loggedIn) {
                    window.location.href = 'dashboard-responsive.html';
                }
            }
        });
    </script>
