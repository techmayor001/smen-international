                // Search filter
                if (currentFilters.search) {
                    const searchTerm = currentFilters.search;
                    const searchableText = `${job.title} ${job.description} ${job.department} ${job.location}`.toLowerCase();
                    if (!searchableText.includes(searchTerm)) {
                        return false;
                    }
                }

                return true;
